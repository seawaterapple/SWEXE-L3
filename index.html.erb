<%= stylesheet_link_tag  "application.css"%>
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @tweets.each do |e| %>
    <b>
        <p>
        <%= image_tag 'obake.png'%>
        </p>
        <a><%= image_tag 'people.png' %>山田</a>
        <%= ((Time.current - e.tdate)/60).to_i %>分
        <p>
            <%= e.message %>
            <%=link_to '削除', "/tweets/#{e.id}", data: { turbo_method: :delete } %>
            <%=link_to '表示', "/tweets/#{e.id}" %>
            <%=link_to '編集', "/tweets/#{e.id}/edit" %>
        </p>
      </b>
